<html >
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        
    </head>
    <body>
        <div class="container"><div class="jumbotron"><h1>Sign Up</h1></div></div>
        <form name = "myForm" role="form" onsubmit = "return validateForm()" action="/adduser" method = "post">
        <div class="container">
        <table class="table table-striped">
            <tr>
                <td>
                <div class="form-group">
                    First name:<br>
                    <input type= "text" class="form-control" name="firstname" required maxlength="20"><br>
            
                    Last name:<br>
                    <input type="text" class="form-control" name="lastname" required maxlength="20"><br>
                </div>
                </td>
            </tr>
                
                <div class="form-group"> 
                
            <tr>
                <td>
                    Age:<br>
                    <input type = "number" class="form-control"  name = age required maxlength="3"><br>
                </td>
            </tr>
                </div>
            <tr> 
                <td>
                Email:<br>
                <input type="text" class="form-control" name="email" size="10" required><br>
                </td>
            </tr>
            <tr>
                <td>
                Password:<br>
                <input type = "password" class="form-control" name = "pswd" minlength="7" required><br>
                Confirm Password:<br>
                <input type = "password" class="form-control" name = "cpswd" minlength="7" required><br><br>
                </td>
            </tr>
            <tr>
                <td>
                <button type="submit" onclick="validateForm()" class="btn btn-default">Submit</button>
                <button type="button" onclick="window.location='Login'" style="text-align: left"class ="btn btn-primary">Back</button>
                </td>
            </tr>
        </table>
        </div>
        </form>
        
        <script>
            function validateForm() {
                var email = document.myForm.email.value;
                var atpos = email.indexOf("@");
                var dotpos = email.lastIndexOf(".");                     // checking email
                if ((atpos < 1 || dotpos < atpos + 2) || dotpos + 2 >= email.length) {
                    alert("Please submit a real email address")
                    document.myForm.email.focus();
                    return false;
                }
                var pswd = document.myForm.pswd.value;
                var cpswd = document.myForm.cpswd.value;
                if(pswd != cpswd){
                    alert("The passwords must match");
                    document.myForm.pswd.focus();
                    return false;
                }     
                return true; 
            }
        </script>
    </body>
</html>